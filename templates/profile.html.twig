{% extends 'layout.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-2">
                <div class="text-center">
                    <h1>Profile</h1>
                    <table class="table">
                        <tr>
                            <th>Login:</th>
                            <td>{{ user.login }}</td>
                        </tr>
                        <tr>
                            <th>Email:</th>
                            <td><a href="mailto:{{ user.email }}">{{ user.email }}</a></td>
                        </tr>
                    </table>
                    <a href="/logout" class="btn btn-primary">Log out</a>
                </div>
            </div>
        </div>

    </div>

{% endblock %}
